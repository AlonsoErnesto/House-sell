---
import { ClientRouter } from "astro:transitions";
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const {
  title,
  description = "Venta de propiedades exclusivas con la mejor experiencia.",
  image = "/image1.png",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site || Astro.url);
const socialImageURL = new URL(image, Astro.url);
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/images/logo.png" />
    <meta name="generator" content={Astro.generator} />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImageURL} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={socialImageURL} />

    <!-- Google Fonts: Outfit for modern, premium look -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
    <ClientRouter />
  </head>
  <body
    class="bg-slate-900 text-white selection:bg-indigo-500 selection:text-white"
  >
    <slot />
  </body>
</html>

<style is:global>
  /* Global specific styles if needed beyond tailwind */
</style>
